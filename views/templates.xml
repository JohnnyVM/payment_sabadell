<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- data noupdate="1" -->
	<data>

		<!-- Declaración mínima obligatoria -->
		<template id="sabadell_form">
			<div>
				<input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me="" />
				<input type="hidden" name="amount" t-att-value="amount" />
				<input type="hidden" name="partner_lang" t-att-value="partner_lang" />
				<input type="hidden" name="currency_id" t-att-value="currency_id" />
				<input type="hidden" name="reference" t-att-value="reference" />
			</div>
		</template>

		<template id="sabadell_iframe">
			<iframe title="Sabadell payment" t-att-src="iframe_url" frameborder="0" marginheight="0" marginwidth="0" scrolling="no" style="border: 0px solid #000000; padding: 0px; margin: 0px"></iframe>
		</template>

	</data>
</odoo>
